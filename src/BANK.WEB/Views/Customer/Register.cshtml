@model RegisterViewModel

@{
    ViewData["Title"] = "Create an account";
}

@section Styles{
<link rel="stylesheet" href="~/css/customer.css" asp-append-version="true" />
}

<div class="row">
    <div class="col-12 register_image"></div>
    <div class="col-12 d-flex justify-content-between flex-column flex-md-row form">
        <div class="col-0 col-md-4 d-none d-md-flex left_side">
            <p class="left_side_title">It's good to see you here</p>
            <p class="left_side_text">Complete the fields on the side to request your Account</p>
        </div>
        <div class="col-12 col-md-8 d-flex right_side">
            <form asp-action="Register" asp-controller="Customer" method="post" enctype="application/x-www-form-urlencoded">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email address</label>
                    @if (Model.ReadOnlyEmailInput == true)
                    {
                        <input required="" type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" readonly="readonly">
                    }
                    else
                    {
                        <input required="" type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" autocomplete="off">
                    }
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input required="" asp-for="Name" type="text" class="form-control" autocomplete="off">
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input required="" asp-for="Password" type="password" class="form-control" autocomplete="off">
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input required="" asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="off">
                </div>
                <button type="submit" class="btn btn-primary col-12">Continue</button>
            </form>
        </div>
    </div>
</div>